{
  "name": "yandex-music-fisher",
  "version": "2.1.0",
  "private": true,
  "scripts": {
    "build": "npm run build:chromium && npm run build:firefox && npm run build:opera && npm run build:edge",
    "build:chromium": "webpack --config tools/webpack.config.js --env.platform=chromium && node tools/post_build.js chromium",
    "build:firefox": "webpack --config tools/webpack.config.js --env.platform=firefox && node tools/post_build.js firefox",
    "build:opera": "webpack --config tools/webpack.config.js --env.platform=opera && node tools/post_build.js opera",
    "build:edge": "webpack --config tools/webpack.config.js --env.platform=edge && node tools/post_build.js edge",
    "lint": "eslint -c tools/.eslintrc.js src tools",
    "test": "npm run lint && npm run build",
    "preversion": "npm test",
    "version": "npm run build && npm run create-github-release && git add package.json",
    "postversion": "git push && git push --tags",
    "create-github-release": "node tools/create_github_release",
    "show-download-stats": "node tools/show_download_stats",
    "cover-sizes": "node tools/cover_sizes"
  },
  "devDependencies": {
    "blueimp-md5": "^2.7.0",
    "browser-id3-writer": "^3.0.2",
    "copy-webpack-plugin": "^4.0.1",
    "eslint": "^3.15.0",
    "jszip": "^3.1.3",
    "uritemplate": "^0.3.4",
    "webpack": "^2.2.1"
  }
}
